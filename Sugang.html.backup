// --- Admin Component ---
const AdminPage = ({ courses, setCourses }) => {
    const [newCourse, setNewCourse] = useState({
        title: '', instructor: '', category: '수학', level: '중급',
        day: [], startPeriod: 1, endPeriod: 2,
        room: '', capacity: 20, description: ''
    });

    const toggleDay = (day) => {
        setNewCourse(prev => {
            const days = prev.day.includes(day) 
                ? prev.day.filter(d => d !== day)
                : [...prev.day, day].sort((a,b) => DAYS.indexOf(a) - DAYS.indexOf(b));
            return { ...prev, day: days };
        });
    };

    const handleAddCourse = (e) => {
        e.preventDefault();
        if(newCourse.day.length === 0) return alert("요일을 선택해주세요.");
        if(parseInt(newCourse.startPeriod) > parseInt(newCourse.endPeriod)) return alert("종료 교시가 시작 교시보다 빠를 수 없습니다.");
        
        const course = {
            id: Date.now(),
            ...newCourse,
            day: newCourse.day.join('/'),
            startPeriod: parseInt(newCourse.startPeriod),
            endPeriod: parseInt(newCourse.endPeriod),
            enrolled: 0,
            color: `bg-${getColorByCategory(newCourse.category)}-100 text-${getColorByCategory(newCourse.category)}-800`
        };
        
        setCourses([...courses, course]);
        setNewCourse({
            title: '', instructor: '', category: '수학', level: '중급',
            day: [], startPeriod: 1, endPeriod: 2,
            room: '', capacity: 20, description: ''
        });
        alert("강좌가 성공적으로 개설되었습니다.");
    };

    const handleDelete = (id) => {
        if(window.confirm("정말 이 강좌를 폐강하시겠습니까?")) {
            setCourses(courses.filter(c => c.id !== id));
        }
    };

    const getColorByCategory = (cat) => {
        switch(cat) {
            case '수학': return 'blue';
            case '영어': return 'purple';
            case '과학': return 'green';
            case '코딩': return 'orange';
            default: return 'gray';
        }
    };

    return (
        <div className="max-w-5xl mx-auto px-4 py-8">
            <h1 className="text-2xl font-bold text-slate-900 mb-6 flex items-center gap-2">
                <Briefcase className="w-6 h-6 text-[#00b6b2]" />
                강좌 개설 및 관리
            </h1>
            
            {/* Create Course Form */}
            <div className="bg-white rounded-2xl border border-gray-200 p-6 mb-10 shadow-sm">
                <h2 className="text-lg font-semibold mb-4">새 강좌 등록</h2>
                <form onSubmit={handleAddCourse} className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div className="space-y-4">
                        <input required placeholder="강좌명 (예: 고등 수학 심화)" className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none focus:border-[#00b6b2] transition-colors" value={newCourse.title} onChange={e=>setNewCourse({...newCourse, title: e.target.value})} />
                        <div className="grid grid-cols-2 gap-4">
                            <input required placeholder="강사명" className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none focus:border-[#00b6b2]" value={newCourse.instructor} onChange={e=>setNewCourse({...newCourse, instructor: e.target.value})} />
                            <input required placeholder="강의실 (예: 301호)" className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none focus:border-[#00b6b2]" value={newCourse.room} onChange={e=>setNewCourse({...newCourse, room: e.target.value})} />
                        </div>
                        <div className="grid grid-cols-2 gap-4">
                            <select className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none" value={newCourse.category} onChange={e=>setNewCourse({...newCourse, category: e.target.value})}>
                                {CATEGORIES.filter(c=>c!=='전체').map(c=><option key={c}>{c}</option>)}
                            </select>
                             <select className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none" value={newCourse.level} onChange={e=>setNewCourse({...newCourse, level: e.target.value})}>
                                <option>초급</option><option>중급</option><option>고급</option><option>실전</option>
                            </select>
                        </div>
                    </div>
                    <div className="space-y-4">
                        <div>
                            <label className="text-sm font-medium text-slate-600 mb-2 block">수업 요일</label>
                            <div className="flex gap-2">
                                {DAYS.map(day => (
                                    <button type="button" key={day} onClick={() => toggleDay(day)}
                                        className={`w-9 h-9 rounded-full text-sm font-medium transition-all ${newCourse.day.includes(day) ? 'bg-[#00b6b2] text-white' : 'bg-slate-100 text-slate-500 hover:bg-slate-200'}`}>
                                        {day}
                                    </button>
                                ))}
                            </div>
                        </div>
                        <div className="flex items-center gap-2">
                             <div className="flex-1">
                                <label className="text-xs text-slate-500 mb-1 block">시작 교시</label>
                                <select className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none" value={newCourse.startPeriod} onChange={e=>setNewCourse({...newCourse, startPeriod: e.target.value})}>
                                    {PERIODS.map(p => <option key={p.id} value={p.id}>{p.id}교시 ({p.time})</option>)}
                                </select>
                             </div>
                             <span className="text-slate-400 pt-5">~</span>
                             <div className="flex-1">
                                <label className="text-xs text-slate-500 mb-1 block">종료 교시</label>
                                <select className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none" value={newCourse.endPeriod} onChange={e=>setNewCourse({...newCourse, endPeriod: e.target.value})}>
                                    {PERIODS.map(p => <option key={p.id} value={p.id}>{p.id}교시 ({p.time})</option>)}
                                </select>
                             </div>
                        </div>
                         <input type="number" placeholder="정원 (명)" className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none focus:border-[#00b6b2]" value={newCourse.capacity} onChange={e=>setNewCourse({...newCourse, capacity: parseInt(e.target.value)})} />
                    </div>
                     <textarea placeholder="강좌 설명..." className="md:col-span-2 w-full p-3 bg-slate-50 border border-slate-200 rounded-xl outline-none focus:border-[#00b6b2] h-24 resize-none" value={newCourse.description} onChange={e=>setNewCourse({...newCourse, description: e.target.value})} />
                     <button className="md:col-span-2 w-full bg-slate-900 hover:bg-[#00b6b2] text-white py-3 rounded-xl font-bold transition-all">강좌 개설하기</button>
                </form>
            </div>

            {/* Course List */}
            <h2 className="text-lg font-semibold mb-4">개설된 강좌 목록 ({courses.length})</h2>
            <div className="bg-white rounded-2xl border border-gray-200 overflow-hidden">
                <table className="w-full text-left">
                    <thead className="bg-slate-50 text-slate-500 text-sm font-medium">
                        <tr>
                            <th className="p-4">강좌명</th>
                            <th className="p-4">강사</th>
                            <th className="p-4">교시</th>
                            <th className="p-4">현황</th>
                            <th className="p-4 text-right">관리</th>
                        </tr>
                    </thead>
                    <tbody className="divide-y divide-gray-100">
                        {courses.map(course => (
                            <tr key={course.id} className="hover:bg-slate-50/50">
                                <td className="p-4 font-medium text-slate-900">{course.title}</td>
                                <td className="p-4 text-slate-600">{course.instructor}</td>
                                <td className="p-4 text-slate-500 text-sm">{formatSchedule(course.day, course.startPeriod, course.endPeriod)}</td>
                                <td className="p-4 text-slate-500 text-sm">{course.enrolled}/{course.capacity}명</td>
                                <td className="p-4 text-right">
                                    <button onClick={() => handleDelete(course.id)} className="text-red-400 hover:text-red-600 p-2 hover:bg-red-50 rounded-lg transition-colors">
                                        <Trash2 className="w-4 h-4" />
                                    </button>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
                 {courses.length === 0 && <div className="p-8 text-center text-slate-400">개설된 강좌가 없습니다.</div>}
            </div>
        </div>
    );
};

// --- Weekly Schedule Components ---

// 1. Sidebar Mini Schedule (Small)
const WeeklySchedule = ({ enrolledCourses }) => {
    const getCourseBlock = (dayIndex, periodId) => {
        return enrolledCourses.find(course => {
            const days = course.day.split('/');
            const isDayMatch = days.includes(DAYS[dayIndex]);
            const isPeriodMatch = periodId >= course.startPeriod && periodId <= course.endPeriod;
            return isDayMatch && isPeriodMatch;
        });
    };

    return (
        <div className="bg-white rounded-2xl border border-gray-200 p-4 mt-6">
            <h3 className="text-sm font-bold text-slate-900 mb-4 flex items-center gap-2">
                <Calendar className="w-4 h-4 text-[#00b6b2]" />
                주간 시간표 미리보기
            </h3>
            
            <div className="grid grid-cols-8 gap-1 text-[10px] text-center">
                <div className="text-slate-400">교시</div>
                {DAYS.map(day => <div key={day} className="font-semibold text-slate-600">{day}</div>)}

                {PERIODS.map((period) => (
                    <React.Fragment key={period.id}>
                        {/* Period Label (e.g. 1) */}
                        <div className="text-slate-400 h-8 flex flex-col items-center justify-center bg-slate-50 rounded-sm">
                            <span className="font-bold">{period.id}</span>
                            <span className="text-[8px] scale-90">{period.time}</span>
                        </div>
                        
                        {/* Days Grid */}
                        {DAYS.map((day, dayIndex) => {
                            const course = getCourseBlock(dayIndex, period.id);
                            const isStartBlock = course && course.startPeriod === period.id;
                            
                            // 12교시는 토/일 제외
                            if (period.id === 12 && (day === '토' || day === '일')) {
                                return <div key={`${day}-${period.id}`} className="bg-gray-100/50 rounded-sm" />;
                            }

                            return (
                                <div key={`${day}-${period.id}`} className="h-8 relative border border-slate-50">
                                    {course && (
                                        <div className={`absolute inset-0.5 ${course.color.replace('text-', 'bg-').replace('100', '200')} rounded-sm opacity-90 flex items-center justify-center`}>
                                            {isStartBlock && (
                                                <span className="text-[9px] font-bold text-slate-900 truncate px-0.5 leading-tight">
                                                    {course.title.split(' ')[0]}
                                                </span>
                                            )}
                                        </div>
                                    )}
                                </div>
                            );
                        })}
                        
                        {/* Add Spacing after Period 4 (Lunch) and Period 8 (Dinner) */}
                        {(period.id === 4 || period.id === 8) && (
                             <div className="col-span-8 h-2 bg-slate-50/50 -mx-1 my-1 border-t border-b border-slate-100" />
                        )}
                    </React.Fragment>
                ))}
            </div>
        </div>
    );
};

